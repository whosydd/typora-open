{
  "name": "typora-open",
  "displayName": "Typora Open",
  "description": "open markdown file in Typora",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "publisher": "whosydd",
  "license": "MIT",
  "activationEvents": [
    "onCommand:typora.open",
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "typora.open",
        "title": "Open in Typora",
        "category": "Typora",
        "when": "editorLangId == markdown",
        "icon": {
          "dark": "assets/typora.svg",
          "light": "assets/typora.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "typora.open",
          "when": "filesExplorerFocus && resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "typora.open",
          "group": "navigation",
          "when": "editorLangId == markdown"
        }
      ],
      "editor/title": [
        {
          "command": "typora.open",
          "group": "navigation",
          "when": "editorLangId == markdown && config.typora-open.showIconInEditorTitleMenu"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Typora Open configuration",
      "properties": {
        "typora-open.showIconInEditorTitleMenu": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show icon in editor title menu.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whosydd/typora-open.git"
  },
  "icon": "assets/typora.png"
}
